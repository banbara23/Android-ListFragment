<?xml version="1.0" encoding="utf-8"?>
<com.ikmr.banbara23.listfragmentsample.StoreListView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/view_store_list_photo_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:src="@android:drawable/ic_lock_lock" />

    <TextView
        android:id="@+id/view_store_list_id_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/view_store_list_photo_image"
        android:text="id"
        android:textColor="#555555"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/view_store_list_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/view_store_list_id_text"
        android:maxLines="2"
        android:text="name"
        android:textColor="#555555"
        android:textSize="30dp" />

</com.ikmr.banbara23.listfragmentsample.StoreListView>